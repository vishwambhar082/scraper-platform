# Example: Simple site with NO LLM (pure regex/XPath)
source: simple_site

mode:
  extract_engine: "classic"      # Classic only, no LLM
  pdf_to_table: "none"           # No PDFs

llm:
  enabled: false                  # LLM completely disabled

engine:
  type: selenium

auth:
  requires_login: false

urls:
  root: "https://example.com"

rate_limit:
  min_delay_seconds: 1.0
  max_delay_seconds: 3.0

output:
  daily_csv_dir: "output/simple_site/daily"

quality:
  require_price: true
  require_name: true

session:
  sticky_account_proxy: true
  cookie_ttl_hours: 12

